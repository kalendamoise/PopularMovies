<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_2"
    android:layout_marginLeft="@dimen/card_margin_2"
    android:layout_marginRight="@dimen/card_margin_2"
    card_view:cardUseCompatPadding="true">

<LinearLayout
    style="@style/Widget.CardContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageButton
        android:id="@+id/list_item_video_image"
        android:contentDescription="description"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/black"
        android:onClick="launchYouTube"

        android:src="@android:drawable/ic_media_play"
         />


    <TextView
        android:id="@+id/list_item_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Video"
        android:layout_gravity="center_vertical" />
    <TextView
        android:id="@+id/list_item_video_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_gravity="center_vertical" />

</LinearLayout>

</android.support.v7.widget.CardView>

